<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.finalappandb.DrawingView
        android:id="@+id/drawing_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/heatmap_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/bar_chart_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/drawing_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/black_color_button"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginEnd="1dp"
                android:src="@drawable/black_color_icon"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Black Color"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/red_color_button"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginEnd="1dp"
                android:src="@drawable/red_color_icon"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Red Color"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/purple_color_button"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginEnd="1dp"
                android:src="@drawable/purple_color_icon"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Purple Color"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/green_color_button"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginEnd="1dp"
                android:src="@drawable/green_color_icon"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Green Color"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/blue_color_button"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/blue_color_icon"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Blue Color"
                android:scaleType="fitCenter" />

        </LinearLayout>

        <SeekBar
            android:id="@+id/stroke_width_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:max="50"
            android:progress="12" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/clear_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:src="@drawable/clear_btn_img"
        android:scaleType="fitCenter"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Clear" />

    <ImageButton
        android:id="@+id/analyze_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:src="@drawable/analyze_btn_img"
        android:scaleType="fitCenter"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Analyze" />

    <ImageButton
        android:id="@+id/fun_analysis_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:src="@drawable/fun_fact_icon"
        android:scaleType="fitCenter"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Fun Analysis"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/timelapse_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:src="@drawable/timelapse_icon"
        android:scaleType="fitCenter"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:visibility="gone"
        android:contentDescription="Create Time-lapse" />

    <ImageButton
        android:id="@+id/switch_view_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:src="@drawable/switch_btn_img"
        android:scaleType="fitCenter"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:visibility="gone"
        android:contentDescription="Switch View" />

</RelativeLayout>